{
  "name": "layer-arch-payments",
  "version": "0.1.0",
  "description": "A consistent payment processor.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rm -r ./dist && tsc && tsc-alias",
    "start": "node dist/src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "tsx load-test-custom.ts",
    "test:load:light": "TARGET_RPS=50 DURATION_SECONDS=30 REQUEST_TIMEOUT=15000 tsx load-test-custom.ts",
    "test:load:moderate": "TARGET_RPS=200 DURATION_SECONDS=60 REQUEST_TIMEOUT=15000 tsx load-test-custom.ts",
    "test:load:heavy": "TARGET_RPS=1000 DURATION_SECONDS=60 REQUEST_TIMEOUT=30000 tsx load-test-custom.ts",
    "test:load:insane": "TARGET_RPS=5000 DURATION_SECONDS=120 REQUEST_TIMEOUT=60000 tsx load-test-custom.ts",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:migrate-dev": "prisma migrate dev",
    "db:sync": "prisma migrate deploy",
    "sql:ui": "pnpm dlx prisma studio",
    "redis:ui": "pnpm dlx redis-commander@0.9.0 --redis-host localhost --redis-port 6379 --redis-password local --port 8081"
  },
  "keywords": [],
  "author": "@VetVictor33",
  "license": "ISC",
  "packageManager": "pnpm@10.29.1",
  "devDependencies": {
    "@bull-board/api": "^6.18.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.0",
    "ts-jest": "^29.4.6",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@bull-board/fastify": "^6.18.2",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bullmq": "^5.69.3",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "redis": "^5.11.0",
    "zod": "^4.3.6"
  }
}
